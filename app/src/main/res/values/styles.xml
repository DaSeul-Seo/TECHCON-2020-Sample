<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/surface_01</item>
        <item name="colorPrimaryDark">@color/surface_01</item>
        <item name="colorAccent">@color/alert</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.Grayscale">
        <item name="colorAccent">@color/surface_01</item>
    </style>

    <style name="AppTheme.Light">
        <item name="android:windowBackground">@color/surface_09</item>
    </style>

    <style name="AppTheme.Material" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/surface_01</item>
        <item name="colorPrimaryDark">@color/surface_01</item>
        <item name="colorSecondary">@color/alert</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
