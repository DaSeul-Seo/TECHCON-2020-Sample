<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naver.techcon.soup.Chapter04a">

    <ImageView
        android:id="@+id/developer"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_margin="12dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:src="@drawable/ic_developer"
        app:layout_constraintBottom_toBottomOf="@id/heart"
        app:layout_constraintEnd_toStartOf="@id/heart"
        app:layout_constraintTop_toTopOf="@id/heart"
        app:tint="@color/surface_01" />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginTop="36dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:src="@drawable/ic_heart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/selector_heart" />

    <ImageView
        android:id="@+id/coffee"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_margin="12dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:src="@drawable/ic_drink"
        app:layout_constraintBottom_toBottomOf="@id/heart"
        app:layout_constraintStart_toEndOf="@id/heart"
        app:layout_constraintTop_toTopOf="@id/heart"
        app:tint="@color/surface_01" />

</androidx.constraintlayout.widget.ConstraintLayout>
